---
import BaseLayout from '../layouts/BaseLayout.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

const approvedColors = [
  { name: 'Brilliant White', swatch: '#eceeea', code: 'PM-4', link: 'https://www.benjaminmoore.com/en-us/paint-colors/color/pm-4/brilliant-white' },
  { name: 'Cliffside Gray', swatch: '#cdd0cb', code: 'PM-5', link: 'https://www.benjaminmoore.com/en-us/paint-colors/color/pm-5/cliffside-gray' },
  { name: 'Hamilton Blue', swatch: '#63757e', code: 'PM-6', link: 'https://www.benjaminmoore.com/en-us/paint-colors/color/pm-6/hamilton-blue' },
  { name: 'Platinum Gray', swatch: '#a8a9a4', code: 'PM-7', link: 'https://www.benjaminmoore.com/en-us/paint-colors/color/pm-7/platinum-gray' },
