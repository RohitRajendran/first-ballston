---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

const features = [
  {
    title: "Metro accessible",
    description: "Orange and Silver lines put DC, Clarendon, and Ballston minutes away.",
    icon: "train",
  },
  {
    title: "Private patios",
    description: "Dedicated outdoor space for coffee, conversation, or winding down.",
    icon: "deck",
  },
  {
    title: "Low HOA fees",
    description: "Balanced community services without stretching your budget.",
    icon: "savings",
  },
];

const locationHighlights = [
  "10 minutes to Ronald Reagan Washington National Airport",
  "Walkable to grocery stores, coffee shops, and playgrounds",
  "In a top-rated Arlington Public Schools district",
];
---

<BaseLayout>
  <NavBar />

  <section class="relative overflow-hidden bg-slate-900 pt-20 text-white">
    <img
      src="/assets/banner.avif"
      alt="Brick townhomes in the First Ballston Commons community"
      class="absolute inset-0 h-full w-full object-cover"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
    <div class="hero-overlay absolute inset-0 z-10"></div>
    <div class="relative z-20 mx-auto max-w-6xl px-4 py-16 md:py-20">
      <div class="flex flex-col items-center gap-4 text-center md:mx-auto md:max-w-3xl">
        <h1 class="text-4xl leading-tight font-extrabold md:text-5xl">First Ballston Commons</h1>
        <p class="max-w-2xl text-lg text-white/80 md:text-xl">
          Tree-lined streets, friendly neighbors, and quick access to Metro, parks, and the best of
          Arlington.
        </p>
        <div class="flex flex-wrap justify-center gap-3 pt-2">
          <a
            class="bg-primary hover:bg-primary-dark inline-flex items-center gap-2 rounded-lg px-6 py-3 font-semibold text-white shadow transition"
            href="https://engage.goenumerate.com/s/firstballstoncommons/hoapage.php?page=contact_17941"
            target="_blank"
            rel="noopener"
          >
            <span class="material-symbols-outlined text-base">mail</span>
            Get in touch
          </a>
          <a
            class="inline-flex items-center gap-2 rounded-lg border border-white/70 px-6 py-3 font-semibold text-white transition hover:bg-white/10"
            href="https://engage.goenumerate.com/s/firstballstoncommons/home.php"
            target="_blank"
            rel="noopener"
          >
            <span class="material-symbols-outlined text-base">login</span>
            Resident portal
          </a>
        </div>
      </div>
    </div>
  </section>

  <main class="grow">
    <section class="py-12">
      <div class="mx-auto max-w-4xl px-4 text-center">
        <div class="section-eyebrow">Community</div>
        <h2 class="mb-3 text-3xl font-bold md:text-4xl">Welcome home</h2>
        <p class="mb-2 text-lg text-slate-600">
          First Ballston Commons is one of the oldest townhouse developments in Ballston. Our
          community of homeowners and renters enjoys reserved parking, weekly trash removal, and
          professional grounds care by Blade Runners.
        </p>
      </div>
    </section>

    <section class="bg-white py-12">
      <div class="mx-auto max-w-6xl px-4">
        <div
          class="mb-6 flex flex-col gap-3 border-b border-slate-200 pb-4 md:flex-row md:items-end md:justify-between"
        >
          <div>
            <h2 class="text-2xl font-bold md:text-3xl">Community features</h2>
          </div>
        </div>
        <div class="grid gap-4 md:grid-cols-3">
          {
            features.map((feature) => (
              <div class="feature-card" aria-label={feature.title}>
                <div class="icon-circle mb-4">
                  <span class="material-symbols-outlined">{feature.icon}</span>
                </div>
                <h3 class="mb-2 text-lg font-semibold">{feature.title}</h3>
                <p class="text-slate-600">{feature.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="py-12">
      <div class="mx-auto max-w-6xl px-4">
        <div
          class="grid overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm md:grid-cols-2"
        >
          <div class="flex flex-col gap-4 p-6 md:p-10">
            <div class="section-eyebrow">Neighborhood</div>
            <h2 class="text-3xl font-bold">Ideally located</h2>
            <p class="text-slate-600">
              Minutes from Clarendon and Ballston, close to parks, restaurants, and everyday
              errands. Whether you're commuting to the Pentagon, DC, or Tysons, our central location
              keeps you connected.
            </p>
            <ul class="space-y-3 text-slate-800">
              {
                locationHighlights.map((item) => (
                  <li class="flex items-start gap-2">
                    <span class="material-symbols-outlined text-primary">check_circle</span>
                    <span>{item}</span>
                  </li>
                ))
              }
            </ul>
            <a
              class="text-primary flex items-center gap-1 font-semibold"
              href="https://maps.app.goo.gl/BEEJZGemwtjEsnYB9"
              target="_blank"
              rel="noopener"
            >
              Explore the neighborhood
              <span class="material-symbols-outlined text-base">arrow_forward</span>
            </a>
          </div>
          <a
            class="relative block min-h-75 bg-slate-200 md:min-h-auto"
            href="https://maps.app.goo.gl/eq3hw4Smii7PwjjaA"
            target="_blank"
            rel="noopener"
          >
            <div
              class="absolute inset-0 bg-cover bg-center"
              style="background-image: url('assets/map.avif');"
            >
            </div>
            <div class="bg-primary/10 absolute inset-0 flex items-center justify-center">
              <div class="flex items-center gap-2 rounded-lg bg-white p-3 shadow-lg">
                <span class="material-symbols-outlined text-primary">location_on</span>
                <span class="text-xs font-bold text-slate-900">We are here</span>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
